# syntax=docker/dockerfile:1
   
FROM alpine:latest

RUN apk update && apk add linux-headers g++ make cmake git
RUN git clone https://github.com/neilstephens/MiniPlex.git
ARG BUILD_COMMIT=main
RUN git -C MiniPlex checkout $BUILD_COMMIT && \
	mkdir MiniPlex-bin && \
	cmake -DCMAKE_CXX_FLAGS=-static -S MiniPlex -B MiniPlex-bin && \
	cmake --build MiniPlex-bin --parallel 8 && \
	strip MiniPlex-bin/MiniPlex
